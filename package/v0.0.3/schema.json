{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "id": {
      "type": "string",
      "pattern": "^[0-9a-z-]+$"
    },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "categories": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/category"
      }
    },
    "characters": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/character"
      }
    },
    "owners": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": { "type": "string" }
    },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/file"
      }
    },
    "license": {
      "$ref": "#/definitions/license"
    },
    "copyrights": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": { "type": "string" }
    },
    "website": {
      "type": "string",
      "format": "uri"
    },
    "fallback": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "name",
    "version",
    "categories",
    "characters",
    "owners",
    "files",
    "license",
    "copyrights",
    "website"
  ],
  "additionalProperties": false,
  "definitions": {
    "category": {
      "enum": ["Mincho", "Gothic", "MaruGothic", "Brush", "Others"]
    },
    "character": {
      "enum": ["Alphabets", "Hiragana", "Katakana", "Kanji"]
    },
    "file": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "fonts": {
          "type": "object",
          "properties": {
            "thin": { "$ref": "#/definitions/font" },
            "extraLight": { "$ref": "#/definitions/font" },
            "light": { "$ref": "#/definitions/font" },
            "normal": { "$ref": "#/definitions/font" },
            "medium": { "$ref": "#/definitions/font" },
            "semiBold": { "$ref": "#/definitions/font" },
            "bold": { "$ref": "#/definitions/font" },
            "extraBold": { "$ref": "#/definitions/font" },
            "black": { "$ref": "#/definitions/font" }
          },
          "additionalProperties": false,
          "minProperties": 1
        }
      },
      "required": ["from", "fonts"],
      "additionalProperties": false
    },
    "license": {
      "type": "object",
      "properties": {
        "id": {
          "enum": ["IPA", "Apache-2.0", "OFL-1.1", "Mplus", "Others"]
        },
        "from": {
          "type": "string",
          "format": "uri"
        },
        "files": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { "type": "string" }
        }
      },
      "required": ["id"],
      "additionalProperties": false
    },
    "font": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "number": { "type": "integer" }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
